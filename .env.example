# ==============================================================================
# Aegis Environment Variables
# ==============================================================================
# Copy this file to .env and update with your values
# ==============================================================================

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=aegis_secure_password_change_me
MONGO_DB=aegis_auth

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_in_production_min_32_chars
JWT_EXPIRE=7d

# Backend Configuration
MODE=static
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:80,http://frontend

# Application Ports (if you want to change defaults)
# FRONTEND_PORT=80
# BACKEND_PORT=8000
# AUTH_PORT=5000
# MONGODB_PORT=27017
